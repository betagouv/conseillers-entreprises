- if current_page.first?
  %li.fr-pagination__item--first.fr-pagination__item.fr-pagination__item.fr-pagination__item--disabled
- else
  %li.fr-pagination__item--first.fr-pagination__item.fr-pagination__item
    = link_to url, title: t('views.pagination.first'), class: 'fr-pagination__link',
      "aria-label": t('views.pagination.first'), remote: remote do
      %span

