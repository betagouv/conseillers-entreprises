%h3= t('.details_question')

%p= t('.details_answer_service')

%p= t('.details_answer')

%p= t('.insitution_engagment', institution: @resource.institution.name)

%p= t('.discover_partners_html', link: link_to(t('app_name'), comment_ca_marche_url(anchor: 'liste-partenaires')))
