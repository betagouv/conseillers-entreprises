%h2= t('.header')
= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'ui form' }) do |f|
  = render 'devise/shared/error_messages', resource: resource

  .field
    = f.label :email
    = f.email_field :email, autofocus: true, disabled: true

  %p= t('.prefilled_description')
  = render 'devise/shared/user_fields', form: f

  %p= t('.password_description')
  .required.field
    = f.label :password
    = f.password_field :password
  .required.field
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  = f.hidden_field :invitation_token, readonly: true

  .actions
    = f.submit t('.submit_button'), class: 'ui green button'
