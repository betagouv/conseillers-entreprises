.rf-container
  .rf-grid-row.rf-grid-row--center.rf-grid-row--gutters.rf-mb-5w
    .rf-col.rf-col-lg-6
      %h2= t('.header')
      = form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: 'ui form' }) do |f|
        = render 'devise/shared/error_messages', resource: resource

        .rf-input-group
          = f.label :email, class: 'rf-label'
          = f.email_field :email, class: 'rf-input', autofocus: true, disabled: true

        %p= t('.prefilled_description')
        = render 'devise/shared/user_fields', form: f

        %p= t('.password_description')
        .required.rf-input-group
          = f.label :password, class: 'rf-label'
          = f.password_field :password, class: 'rf-input'
        .required.rf-input-group
          = f.label :password_confirmation, class: 'rf-label'
          = f.password_field :password_confirmation, class: 'rf-input'

        = f.hidden_field :invitation_token, readonly: true

        .actions
          = f.submit t('.submit_button'), class: 'rf-btn btn-green'
