%h2= t('sign_in')

= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui form' } do |f|
  .field.required
    = f.label :email
    = f.email_field :email, autofocus: true, required: true
  .field.required
    = f.label :password
    = f.password_field :password, autocomplete: 'off', required: true
  - if devise_mapping.rememberable?
    .field
      .ui.checkbox
        = f.check_box :remember_me, tabindex: 0, class: 'hidden'
        = f.label :remember_me
  .actions
    = f.submit t('sign_in'), class: 'ui button green'

  %h4= t('.how_to_sign_up_title')
  %p= t('.how_to_sign_up_html', email: mail_to(ENV['APPLICATION_EMAIL']))

= render 'devise/shared/links'
