- meta title: t('.meta_title'), description: t('.meta_description')
.fr-container
  .fr-grid-row.fr-grid-row--center.fr-grid-row--gutters.fr-mb-5w
    .fr-col.fr-col-lg-6
      %h1.fr-mb-5w= t('sign_in')
      = form_for resource, as: resource_name, url: session_path(resource_name), html: { class: '' } do |f|
        .fr-input-group
          = f.label :email, t('.email'), class: 'fr-label'
          = f.email_field :email, class: 'fr-input', autofocus: true, required: true, placeholder: t('.placeholders.email')
        .fr-input-group
          = f.label :password, class: 'fr-label'
          = f.password_field :password, class: 'fr-input', autocomplete: 'off', required: true
          = link_to new_password_path(resource_name) do
            = t('devise.forgot_password')
        - if devise_mapping.rememberable?
          .fr-checkbox-group
            = f.check_box :remember_me, checked: true, class: 'hidden'
            = f.label :remember_me
        .fr-mt-3w
          = f.submit t('sign_in'), class: 'fr-btn btn-green'

.fr-container--fluid.lighter-blue-bg.fr-py-6w
  .fr-container
    = t('.how_to_sign_up_html', email: mail_to(ENV['APPLICATION_EMAIL']))
