- meta title: @landing.title, description: @landing.subtitle

%header.navbar
  .navbar__container
    %a.navbar__home{ href: '/' }
      = image_tag 'logo-marianne.svg', alt: 'place-des-entreprises.data.gouv.fr', class: 'navbar__logo'
      %span.navbar__domain= 'place-des-entreprises'
      = image_tag 'pointbetagouvfr.svg', alt: 'beta.gouv.fr', class: 'navbar__gouvfr'

.hero.hero__background{ style: solicitation_background_style }
  .hero__container
    %h1.hero_title= @landing.title
    %h2.hero_subtitle= @landing.subtitle
    %h3
      %a.button{ href: @url_to_root }= @landing.button

- if @landing.logos.present?
  %section.section.section-white
    .container
      %h2.section__title
        = t('.institutions.title')
      .logo-list
        - @landing.logos.split(' ').each do |logo_slug|
          = institution_image(logo_slug)

%section.section.section-grey
