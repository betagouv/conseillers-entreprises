= form_with url: request.path, method: :get, skip_enforcing_utf8: true, local: true, class: 'fr-mb-2w' do |f|
  .fr-grid-row.fr-grid-row--gutters
    .fr-col-md-6.fr-col-12
      - options = { include_blank: t('all.masculin'), class: 'fr-select' }
      = f.label :by_subject, t('attributes.subject'), class: 'fr-label'
      = f.select :by_subject, possible_themes_subjects_collection, options.dup, { class: 'fr-select' }
    .fr-col-md-6.fr-col-12
      .fr-input-group
        = f.label :omnisearch, t('.omnisearch'), class: 'fr-label'
        = f.search_field :omnisearch, value: params[:omnisearch], class: 'fr-input', placeholder: t('.search_placeholder')
  .fr-grid-row.fr-grid-row--gutters
    .fr-col-md-6.fr-col-12
      %p= collection_count needs
    .fr-col-md-6.fr-col-12.text-right
      - if params.present?
        = link_to t('.clear_search'), request.fullpath.split('?').first + "?reset_query=true", id: 'clear-search'
      = f.submit t('.search'), class: 'fr-btn', title: t('.search')
