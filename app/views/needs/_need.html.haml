- cache need do
  .fr-mb-2w
    .fr-card__c-container.fr-card__c-container--need
      .fr-card.fr-card--sm.fr-card--horizontal.fr-enlarge-link
        .fr-card__body
          .fr-card__content
            %h3.fr-h4.fr-card__title
              = link_to need.subject, need_path(need), class: 'fr-card__link'
            %p.fr-card__desc
              %span.fr-text--lg= need.company.name
              = need.facility.commune_name
            .fr-card__start
              - if need.from_external_cooperation?
                %ul.fr-badges-group
                  %li
                    %p.fr-badge.fr-badge--yellow-moutarde= need.cooperation.name
              %ul.fr-card__detail
                %li.fr-p-0
                  %time{ datetime: need.solicited_at }= t('needs.dates.solicited_at', date: l(need.solicited_at, format: :long_sentence))
                %li
                  %time{ datetime: need.match_sent_at }= t('needs.dates.match_sent_at', date: l(need.match_sent_at, format: :long_sentence))
                - if params[:query].present?
                  %span.label.grey-blue= t(need.status, scope: 'needs.collections_single')
