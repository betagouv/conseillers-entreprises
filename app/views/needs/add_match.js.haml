- match_html = render @match, highlighted_experts: []
document.getElementById('additional_experts-#{@need.id}').insertAdjacentHTML('beforebegin', "#{j match_html}");

- html = render 'additional_experts', need: @need
document.getElementById('additional_experts-#{@need.id}').outerHTML = "#{j html}";

- need_header_html = render 'needs/need_header', need: @need
document.getElementById('need_header-#{@need.id}').innerHTML = "#{j need_header_html}";
