- author_field_params = need_feedback_author_hidden_field(need, current_roles)
- return if author_field_params.nil?

- feedback = need.feedbacks.new
.event{ id: "feedback_form-#{need.id}" }
  .label
  .content
    .summary
      = t('.title')
      .date= t('.subtitle')
    .extra
    = form_with scope: feedback,
      url: feedbacks_path(feedback, params.permit(:access_token)),
      class: 'ui form' do |form|
      = form.hidden_field :need_id
      = form.hidden_field(*author_field_params)
      .field
        = form.text_area :description, placeholder: t('.placeholder'),
          class: 'top attached',
          rows: 2, required: true
      = form.button :submit, class: 'ui green basic small button' do
        = t('.submit')

