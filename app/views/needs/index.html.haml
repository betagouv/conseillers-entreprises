- title = t('.title')
- meta title: title
- content_for :header, render('header', recipient: @recipient, collection_name: @collection_name, title: title)
- content_for :menu, render('menu', recipient: @recipient, collections_counts: @inbox_collections_counts, user: @user)
- content_for :search, render('search', needs: @needs, collection_name: @collection_name)

- if @needs.empty?
  = render 'empty_placeholder', recipient: @recipient
- else
  = render 'received_needs', received_needs: @needs

- if @collection_name == 'search'
  = render 'focus_search_content'
