<mjml>
  <mj-head>
    <mj-attributes>
      <mj-text line-height='22px' font-size='14px'>
      <mj-all font-family="Arial" />
    </mj-attributes>
    <mj-style>
      .fr-header__service-title {
        font-weight: 700;
        margin: 0;
      }
      .red {
        color: #ce0500;
      }
      .fr-header__service-tagline {
        line-height: 1.5;
        margin: 0;
      }
      .institution-logo {
        max-height: 75px;
        max-width: 90%;
        padding: 10px 25px;
      }
      .card__detail {
        font-size: 12px;
        color: #666;
      }
      .card__desc {
        font-size: 14px;
        font-weight: 700;
        margin-top: 0.25em;
      }
      .card__title {
        font-size: 16px;
        margin-bottom: 0.25em;
      }
    </mj-style>
  </mj-head>

  <mj-body width='650px'>
    <%= render 'mailers/expert_header', institution_logo_name: @institution_logo_name %>
    <%= yield %>
    <%= render partial: 'mailers/expert_footer' %>
  </mj-body>
</mjml>
