-# Custom Title / Side Menu / Content layout
  Based on the main application layout

- content_for :content do
  .fr-container.fr-pb-6w
    = yield :header

    = yield :callout

    .fr-grid-row.fr-mt-5w#side-menu-main
      .fr-col-md-3.fr-col-12
        %nav.fr-sidemenu.fr-sidemenu--sticky{ 'aria-label': "Menu lat√©ral", role: "navigation" }
          .fr-sidemenu__inner
            %button.fr-sidemenu__btn{ 'aria-controls': "fr-sidemenu-wrapper", 'aria-expanded': "false", hidden: "" }= t('.mobile_menu')
            .fr-collapse#fr-sidemenu-wrapper
              = yield :menu

      .fr-col-md-9.fr-col-12
        = yield :search
        = yield

= render template: 'layouts/application'
