- for_me = policy(feedback).creator?
- highlight = feedback.author.in? highlighted_experts
.event{ id: "feedback-#{feedback.id}" }
  .label
    %a{ href: "#feedback-#{feedback.id}", data: { turbolinks: 'false' } }
      %i.comment.outline.icon{ class: ('blue' if for_me) }
  .content
    .summary
      .user{ class: ('expert-highlighted' if highlight) }
        = feedback.author.full_name
      .ui.popup= person_block(feedback.author)
      .date= I18n.l(feedback.created_at, format: :long)
    .extra.text= simple_format(feedback.description)
    - if policy(feedback).destroy?
      .meta= link_to(t('delete'),
        feedback_path(feedback),
          data: { confirm: t('.delete'), remote: true, method: :delete })
