.ui.two.column.centered.grid#badges
  .column#badges-list
    %h1.ui.header
      = t('.title')
    - if @badges.length > 0
      .ui.list
        - @badges.each do |badge|
          .item
            = badge_label(badge)
            = link_to t('.delete'), badge_path(badge), method: :delete, data: { confirm: t('.confirm_delete') }
    - else
      %p= t('.no_badges')

  .column
    %h2.ui.header
      = t('.add_badge')
    = form_with model: @badge, class: 'ui form', data: { turbo: false } do |f|
      .field
        = f.label 'title', t('.title_label')
        = f.text_field 'title'
      .field
        = f.label 'color', t('.color')
        = f.color_field 'color'
      .field
        = f.submit t('.button.title'), class: 'ui button green'
