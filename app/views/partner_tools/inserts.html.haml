- meta title: t('.title')
- content_for :header, render('header', title: t('.title'))
- content_for :menu, render('menu')

- if @insert[:code].present?
  %strong= t('.code')
  .ui.segment.shadow-less
    = @insert[:code]

  %p
    %strong= t('.preview')
  = @insert[:code].html_safe
  .ui.divider.hidden

= form_with url: inserts_partner_tools_path, local: true, method: :get, class: 'ui form' do |f|

  .field
    = f.label :mtm_campaign
    = f.text_field :mtm_campaign, value: @insert[:mtm_campaign]

  .field
    = f.label :mtm_kwd
    = f.text_field :mtm_kwd, value: @insert[:mtm_kwd]

  .field
    = f.label :width, t('.width')
    = f.select :width, [200, 250, 300], selected: @insert[:width]

  .field
    = f.label :color, t('.color')
    = f.select :color, ['blanc', 'bleu'], selected: @insert[:color]

  .field
    = f.submit t('.generate'), class: 'fr-btn btn-blue'
