- if current_user.managed_antennes.many?
  = form_with url: request.path, method: :get, local: true do |f|
    .fr-select-group.fr-mb-2w{ role: "search" }
      = f.label :antenne_id, t('.select_region'), class: 'fr-label'
      = f.collection_select :antenne_id, current_user.managed_antennes.order(:name), :id, :name, { selected: params[:antenne_id],
        prompt: t('.all_antennes') }, required: true, class: "fr-select fr-mb-2v"
      = f.submit t('.filter'), class: 'fr-btn'
