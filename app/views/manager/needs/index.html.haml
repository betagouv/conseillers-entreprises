- title = @recipient.is_a?(Antenne) ? t('.one_antenne_title', name: @recipient.to_s) : t('.many_antennes_title')
- meta title: title
- content_for :header, render('header', collection_name: @collection_name, title: title)
- content_for :menu, render('menu', collections_counts: @inbox_collections_counts)
- content_for :search, render('shared/needs_search', needs: @needs, filters: @filters, mode: 'manager')

- if @needs.empty?
  = render 'needs/empty_placeholder', recipient: @recipient
- else
  = render 'needs/received_needs', received_needs: @needs
