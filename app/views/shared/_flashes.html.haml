- if flash.present?
  .fr-container.fr-mt-6v.fr-mb-1w
    - flash.each do |type, message|
      - case type
      - when 'notice'
        .fr-alert.fr-alert--success
          %p.fr-alert__title
            = message
      - when 'alert'
        .fr-alert.fr-alert--error
          - if action_name == 'new' && controller_name == 'sessions' # display 'aria-describedby' for login form
            %p.fr-alert__title{ 'aria-describedby': 'user_email user_password' }
              = message
          - else
            %p.fr-alert__title
              = message
