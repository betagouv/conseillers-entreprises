= render 'pages/breadcrumbs', landing: @solicitation.landing, landing_theme: @landing_subject.landing_theme, landing_subject: @landing_subject

.fr-container--fluid.section-grey.fr-py-4w
  .fr-container
    .fr-grid-row
      .fr-col-12
        %h1.fr-h3= @landing_subject.title
        %p.subtitle= t('.solicitation_verification')

    .fr-grid-row
      %h2.fr-h6= t('.my_coordinates')
    .fr-grid-row
      .fr-col-12
        .fr-tile.fr-tile--horizontal
          .fr-tile__body
            %ul.list-unstyled
              %li.fr-tile__title= @solicitation.full_name
              %li= @solicitation.phone_number
              %li= @solicitation.email

    .fr-grid-row.fr-mt-10v
      %h2.fr-h6= t('.my_company')
      .fr-col-12
        .fr-tile.fr-tile--horizontal
          .fr-tile__body
            %ul.list-unstyled
              %li.fr-tile__title= @solicitation.siret


    .fr-grid-row.fr-mt-10v
      %h2.fr-h6= t('.my_solicitation')
      .fr-col-12
        .fr-tile.fr-tile--horizontal
          .fr-tile__body
            %ul.list-unstyled
              %li.fr-tile__title= @solicitation.subject.label
              %li= @solicitation.description

    = form_with(model: @solicitation, url: update_step_verification_solicitation_path(@solicitation.uuid), local: true, html: { honeypot: true, class: 'fr-mt-10v' }) do |f|
      = f.hidden_field :uuid
      = f.submit t('solicitations.creation_form.buttons.send'), class: 'fr-btn', data: { disable_with: t('solicitations.creation_form.submit_in_progress') }
