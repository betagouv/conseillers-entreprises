= form_with(model: @solicitation, url: search_facility_solicitation_path(@solicitation.uuid), local: true, html: { honeypot: true }) do |f|
  = hidden_field_tag :query, company.siren

  .fr-tile.fr-enlarge-link.fr-tile--horizontal
    .fr-tile__body
      %h4.fr-tile__title
        = button_tag [company.siren, company.nom].compact.join(' - '), class: "fr-tile__link"
        -# %a.fr-tile__link{ href: "" }= [company.siren, company.nom].compact.join(' - ')
      %p.fr-tile__desc= company.activite
      %p.fr-tile__desc= t('.nombre_etablissements_ouverts', count: company.nombre_etablissements_ouverts)
      %p.fr-tile__desc
        = t('.choose_my_facility')
        %span.ri-arrow-right-s-line
