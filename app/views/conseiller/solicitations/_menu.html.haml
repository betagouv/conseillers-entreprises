%ul.fr-sidemenu__list
  = menu_link_with_count(t('conseiller.solicitations.titles.index'), count[:in_progress], conseiller_solicitations_path, active: %w[conseiller/solicitations index])
  %li.fr-sidemenu__item
    = active_link_to(t('conseiller.solicitations.titles.processed'), processed_conseiller_solicitations_path, class: 'fr-sidemenu__link', class_active: 'fr-sidemenu__item--active')
  %li.fr-sidemenu__item
    = active_link_to(t('conseiller.solicitations.titles.canceled'), canceled_conseiller_solicitations_path, class: 'fr-sidemenu__link', class_active: 'fr-sidemenu__item--active')
