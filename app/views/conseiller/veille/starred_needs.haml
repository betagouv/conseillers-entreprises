- meta title: t('.title')
- content_for :header, render('header', title: t('.title'))
- content_for :menu, render('menu', collections_count: @collections_by_veille_count)

= render 'filters', needs: @needs

- if @needs.to_a.size == 0
  .fr-container.text-center.fr-mt-18v
    .fr-h3= t('.no_results')
- else
  = paginate @needs

  = render partial: 'needs/admin_need', as: :need, collection: @needs, locals: { action: @action }

  = paginate @needs
