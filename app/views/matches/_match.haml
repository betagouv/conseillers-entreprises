- if !match.expert.deleted? || (match.expert.deleted? && policy(match.expert).show_deleted_experts?)
  .fr-grid-row.row-match{ id: "row-match-#{match.id}" }
    .fr-col-sm-1.fr-col-1.col-icon
      = expert_status_icon(match)
    .fr-col-sm-8.fr-col-11
      %p
        %b.blue.js-simple-tooltip{ "data-simpletooltip-content-id" => "tooltip-match-#{match.id}" }
          #{match.expert.full_name}
        = " - " + match.expert.antenne.name
      .hidden{ id: "tooltip-match-#{match.id}" }
        = person_block(match.expert)
        - if (defined? origin) && origin == 'reminders' && policy(match.expert.antenne).show_manager?
          = render 'antenne_manager', antenne: match.expert.antenne

    .fr-col-sm-3.fr-col.col-label.match-admin-actions
      .status-label
        = status_label(match)


      - if policy(match).update_status?
        %ul.fr-btns-group.fr-btns-group--inline.fr-btns-group--sm
          %li.fr-accordion
            .fr-accordion__title
              %button.fr-btn.fr-btn--secondary.fr-mb-0.fr-accordion__btn{ title: t('.change_match_status'), aria: { controls: "fr-accordion-#{match.id}", expanded: false }, data: { controller: 'fr-accordions-management', action: 'click->fr-accordions-management#collapse' } }
                .ri-edit-box-line
            .fr-collapse{ id: "fr-accordion-#{match.id}" }
              = admin_match_actions_buttons match
          %li
            = link_to quo_reminders_expert_path(match.expert), class: "fr-btn fr-btn--secondary fr-mb-0", title: t('.see_expert_inbox') do
              .ri-inbox-line
