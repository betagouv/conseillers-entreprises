.rf-grid-row.row-match{ id: "row-match-#{match.id}" }
  .rf-col-sm-1.rf-col-1.col-icon
    = expert_status_icon(match.status)
  .rf-col-sm-8.rf-col-11
    %p
      %b.blue.js-simple-tooltip{ "data-simpletooltip-content-id" => "tooltip-case-#{match.id}" }
        #{match.expert.full_name}
      = " - " + match.expert.antenne.name
    .hidden{ id: "tooltip-case-#{match.id}" }
      = person_block(match.expert)

  .rf-col-sm-2.rf-col.col-label
    = status_label(match)

  .rf-col-sm-1.rf-col.modify-match
    - if policy(match).mark_as_done? && match.status_taking_care?
      %section.rf-accordion
        %h3.rf-accordion__title
          %button.rf-accordion__btn{ "aria-controls" => "rf-accordion-#{match.id}", "aria-expanded" => "false" }
            .ri-edit-box-line
        .rf-collapse{ id: "rf-accordion-#{match.id}" }
          = admin_match_actions_buttons match
