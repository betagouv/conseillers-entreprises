= form_with url: institution_antennes_path(institution), local: true, class: 'fr-mb-3w', method: :get do |f|
  .fr-grid-row
    .fr-col
      .fr-select-group.fr-pr-2v
        = f.label :region_code, t('attributes.region'), class: 'fr-label'
        = f.collection_select :region_code, RegionOrderingService.call, :code, :nom, { selected: index_search_params[:region_code],
          include_blank: t('all.feminine') }, class: "fr-select"
  - if index_search_params[:region_code].present?
    = link_to t('clear_search'), request.fullpath.split('?').first + "?reset_query=true", id: 'clear-search', class: 'fr-btn fr-btn--tertiary-no-outline'
  = f.submit t('annuaire.search.form.submit'), class: 'fr-btn fr-mt-2w'
