.fr-container
  %h1.fr-mb-6w= t('.title')

  .fr-grid-row
    .fr-col-12
      %h2= t('.create_acount')
      %p.fr-h5= t('.question_account')

      = link_to t('.download_tuto'), '/tutoriels/creation-de-compte.pdf', target: '_blank', class: 'fr-btn btn-blue', rel: 'noopener'
  %hr.fr-my-4w

  .fr-grid-row
    .fr-col-12
      %h2= t('.find_need')
      %h3.fr-h5= t('.question_expert')
      %p= t('.methods')
      %ul
        %li
          = t('.expert_first_item')
          %blockquote
            .text-grey= t('.quote_first_item')
        %li
          = t('.expert_second_item')
          %blockquote
            .text-grey= t('.quote_second_item')
      %p
        = t('.other_cases')
        %blockquote
          .text-grey= t('.quote_other_cases')

      %h3.fr-h5= t('.subjects-list')
      %ul.fr-accordions-group
        - Theme.for_interview.each do |theme|
          %li
            %section.fr-accordion
              %p.fr-accordion__title
                %button.fr-accordion__btn{ aria: { controls: "fr-accordion-#{theme.id}", expanded: false }, data: { controller: 'fr-accordions-management', action: 'click->fr-accordions-management#collapse' } }= theme

              .fr-collapse{ id: "fr-accordion-#{theme.id}" }
                %ul
                  - theme.subjects.for_interview.each do |subject|
                    %li= subject

      = link_to t('.download_guide'), '/tutoriels/Guide_entretien_Place_des_entreprises.pdf', target: '_blank', class: 'fr-btn btn-blue fr-mt-3w', rel: 'noopener'
      %hr.fr-my-4w

  .fr-grid-row
    .fr-col-12
      %h2= t('.create_diagnosis')
      %p.fr-h5= t('.question_diagnosis')
      = link_to t('.download_tuto'), '/tutoriels/analyse.pdf', target: '_blank', class: 'fr-btn btn-blue', rel: 'noopener'
      %hr.fr-my-4w

  .fr-grid-row
    .fr-col-12
      %h2= t('.take_care_diagnosis')
      %p.fr-h5= t('.question_take_care')
      = link_to t('.download_tuto'), '/tutoriels/prise-en-charge.pdf', target: '_blank', class: 'fr-btn btn-blue', rel: 'noopener'
      %hr.fr-my-4w

  .fr-grid-row
    .fr-col-12
      %h2= t('.emails')
      %p.fr-h5= t('.question_emails')
      %p= t('.explanation_emails')
