- meta title: t('.title')
- content_for :header, render('reminders/header', title: t('.title'), section: :experts, scope: @action)
- content_for :menu, render('menu', expert_collections_count: @expert_collections_count)

= render 'filters', active_experts: @active_experts
= paginate @active_experts

%div
  - if @active_experts.to_a.size == 0
    .fr-container.text-center.fr-mt-18v
      .fr-h3= t('.no_results')
  - else
    = render partial: 'experts/expert', collection: @active_experts, locals: { action: @action, complete_card: true }

= paginate @active_experts
