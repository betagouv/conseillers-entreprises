- meta title: t('.title')

- content_for :header, render('reminders/header', section: :experts, scope: @action)
- content_for :menu, render('reminders/menu', collections_by_reminders_actions_count: @collections_by_reminders_actions_count,
    expert_collections_count: @expert_collections_count,
    collections_by_status_counts: @collections_by_status_counts)

= paginate @active_experts
= form_with url: request.path, method: :get, skip_enforcing_utf8: true, data: { remote: false, controller: 'direct-submit' }, class: '' do |f|
  .fr-grid-row.fr-grid-row--gutters
    .fr-col-md-6.fr-col-12
      .fr-input-group
        - options = { include_blank: t('all_choices'), class: 'fr-select' }
        = f.label(:by_region, t('attributes.region'), class: 'fr-label')
        = f.select(:by_region,
          options_for_select(@possible_territories_options, relance_expert_params[:by_region]),
          options.dup, { class: 'fr-select', data: { action: 'change->direct-submit#submit' } })

%div
  - if @active_experts.blank? && @action == :inputs
    .fr-container.fr-mt-10v
      .fr-grid-row
        .fr-col-offset-3.fr-col-6= image_tag('no-reminders.gif', class: 'fr-responsive-img')
  - else
    = render partial: 'expert', collection: @active_experts, locals: { action: @action }

= paginate @active_experts
