- meta title: t('.title')
- content_for :header, render('reminders/header', title: t('.title'), section: :experts, scope: @action)
- content_for :menu, render('menu', expert_collections_count: @expert_collections_count)

= render 'filters', possible_territories_options: @possible_territories_options, active_experts: @active_experts
= paginate @active_experts

%div
  - if @active_experts.empty? && @action == :inputs
    .fr-container.fr-mt-10v
      .fr-grid-row
        .fr-col-offset-3.fr-col-6= image_tag('no-reminders.gif', class: 'fr-responsive-img')
  - else
    = render partial: 'expert', collection: @active_experts, locals: { action: @action }

= paginate @active_experts
