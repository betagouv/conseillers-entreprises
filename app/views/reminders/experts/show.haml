- meta title: @expert.full_name

- content_for :header, render('reminders/header', section: :experts, expert: @expert)
- content_for :menu, render('menu', expert: @expert, count_expert_needs: @count_expert_needs)

.ui.segments.shadow-less
  .ui.segment
    = render 'expert_contents', expert: @expert
    %div{ id: "expert_reminders_notes-#{@expert.id}" }
      = render 'expert_reminders_notes', expert: @expert
