- meta title: t('reminders.index.title')
- content_for :header, render('reminders/header', title: t('reminders.index.title'), section: :needs, scope: @action.presence)
- content_for :menu, render('menu', collections_by_reminders_actions_count: @collections_by_reminders_actions_count)

= render 'filters', possible_territories_options: @possible_territories_options

- if @needs.to_a.size == 0
  .fr-container.text-center.fr-mt-18v
    .fr-h3= t('.no_results')
- else
  = render 'reminders/needs', received_needs: @needs, action: @action
