- diagnoses = Diagnosis.completed.where(needs: received_needs).distinct.order(happened_on: :desc)

.ui.aligned.grid.padded
  .aligned.eight.wide.column
    %p= collection_count received_needs

= paginate received_needs

= render partial: 'reminders/diagnosis', collection: diagnoses, locals: { needs_of_interest: received_needs, action_path: action_path }, cached: true

= paginate received_needs
