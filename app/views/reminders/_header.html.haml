%h1
  = t('reminders.index.title')

%nav.rf-breadcrumb{ "aria-label" => "vous Ãªtes ici :" }
  %button.rf-breadcrumb__button{ :hidden => "" }= t('nav.see-breadcrumb')
  %ol.rf-breadcrumb__list
    %li.rf-breadcrumb__item
      = link_to t('reminders.index.title'), reminders_path, class: 'section'
    -# section is either :needs or :experts
    %li.rf-breadcrumb__item
      = link_to t(section, scope: 'reminders.section'), polymorphic_path([:reminders, section]), class: 'section'
    -# In the :needs section, we can also have one more level for the current scope
    - if defined?(scope)
      %li.rf-breadcrumb__item
        = link_to t(scope, scope: 'reminders.needs.scopes.name'), polymorphic_path([scope, :reminders, :needs]), class: 'section'
    -# In the :experts section, we can also have one more levek for the current expert
    - if defined?(expert)
      %li.rf-breadcrumb__item
        = link_to expert, reminders_expert_path(expert), class: 'section'

