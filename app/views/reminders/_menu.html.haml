.fr-sidemenu__title
  = t('reminders.section.needs')

%ul.fr-sidemenu__list
  - collections_by_reminders_actions_count.each do |name, count|
    = menu_link_with_count(count, [name, :reminders, :needs], class: 'item', title: t(name, scope: [:reminders, :needs, :scopes, :instruction])) do
      = t(name, scope: 'reminders.needs.scopes.name')
      - detail = t(name, scope: 'reminders.needs.scopes.detail', days: Need::REMINDERS_DAYS[name])
      %i (#{detail})

.fr-sidemenu__title.fr-mt-4w
  = t('reminders.section.experts')

%ul.fr-sidemenu__list#experts-reminders-menu
  - expert_collections_count.each do |name, count|
    = menu_link_with_count(count, [name, :reminders, :experts], class: 'item', title: t(name, scope: [:reminders, :experts, :scopes, :instruction])) do
      = t(name, scope: 'reminders.experts.scopes.name')
      %span{ class: "fr-ml-1v reminders-icon #{t(name, scope: 'reminders.experts.scopes.icon')}", 'aria-hidden': true }

