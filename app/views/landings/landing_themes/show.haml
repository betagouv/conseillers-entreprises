:ruby
  meta title: @landing_theme.meta_title.presence || @landing_theme.title,
    description: @landing_theme.meta_description.presence || @landing_theme.description

- cache_unless(flash.present?, [@landing_theme, @landing, @landing_subjects]) do

  - unless in_iframe?
    %section.section.section-white.landing.less-padding
      .container
        .row.landing-header
          .title
            .heading
              %h1= @landing_theme.page_title || @landing_theme.title
            %p.subtitle= t('landings.landings.home.answer')
            .links
              = render 'pages/cta_button'
          .image
            = image_tag('home.png', alt: "")

  - if show_breadcrumbs?
    = render 'pages/breadcrumbs', landing: @landing, landing_theme: @landing_theme

  - unless in_iframe?
    #scroll-section

  %section.section.section-grey.landing-subject-section
    .container
      %h2.card-section-header= t('you_wish')
      .landing-subject-cards-container
        = render partial: 'landings/landing_subjects/card', collection: @landing_subjects, as: :landing_subject, locals: { landing: @landing }

      - unless in_iframe?
        .text-center.other
          %b= t('.back_to_other_subjects_html')

  - unless in_iframe?
    %section.section.section-light-grey.landing
      = render 'pages/how_it_works'

    - if @landing_theme.landing_subjects.collect(&:logos).present?
      %section.section.section-white
        .container
          %h2.section__subtitle= t('logos.title')
          = render 'landings/landings/logos', landing_theme: @landing_theme

  - if in_iframe? && @landing.display_pde_partnership_mention?
    = render 'landings/landings/pde_partnership_mention'
