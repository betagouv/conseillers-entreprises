-# TODO pour les iframes ajuster les colonnes
.fr-col-12.fr-col-sm-6.fr-col-lg-4.theme-card
  - path = { controller: "landings/landing_themes", action: "show", landing_slug: landing.slug, slug: landing_theme.slug, anchor: 'section-breadcrumbs' }.merge(query_params)
  .fr-tile.fr-enlarge-link
    .fr-tile__body
      %h3.fr-tile__title.fr-h4
        = link_to landing_theme.title, path, class: 'fr-tile__link'
      %p.fr-tile__desc= simple_format(landing_theme.description, {}, wrapper_tag: 'p')
      .discover_button
        %span.ri-arrow-right-line
