.card.block-link
  .card__content
    - path = { controller: "/solicitations", action: "new", landing_slug: landing.slug, landing_subject_slug: landing_subject.slug, anchor: 'section-breadcrumbs' }.merge(query_params)
    %h3= link_to landing_subject.title.html_safe, path, class: 'click-on-landing-subject'
    - if landing_subject.description?
      %p= sanitize landing_subject.description.html_safe
  .discover_button
    %span.ri-arrow-right-line
