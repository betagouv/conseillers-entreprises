.card
  - link_params = { slug: landing.slug, anchor: 'section-formulaire' }
  - link_params.merge!(links_tracking_params)
  - path = landing_path(link_params)
  = link_to path do
    .card__content
      %h3.landing-title= simple_format(landing.home_title, {}, wrapper_tag: 'span')
      %p.landing-description= simple_format(landing.home_description, {}, wrapper_tag: 'span')
  .discover_button
    = link_to path do
      .text-right
        %button.button-outline.small.primary= t('.discover')
