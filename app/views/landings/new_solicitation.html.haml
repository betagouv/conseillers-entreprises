:ruby
  meta_title = @landing.meta_title.presence || @landing.title
  meta_description = @landing.meta_description.presence || @landing.subtitle
  meta title: meta_title, description: meta_description
  landing_option = @solicitation.landing_options&.first

%style= @landing.custom_css

- unless in_iframe?
  %section.section.section-white.landing
    .container.container
      %h1= landing_option&.form_title
      %p.subtitle= @landing.subtitle

  = render 'pages/breadcrumbs', landing: @landing, landing_option: landing_option

- if @solicitation.persisted?
  %section.section.section-grey#section-thankyou
    .container.container-medium
      = render 'new_solicitation_thank_you', landing: @landing

- if @solicitation.new_record?
  %section.section.section-grey.landing#section-formulaire
    .container
      - unless in_iframe?
        .notification.success.delay
          %span
            = t('.five_days_contact_html')
          .asterisk
            = t('.five_days_asterisk')
      .solicitation-form
        = render 'new_solicitation_form', landing: @landing, solicitation: @solicitation, path: create_solicitation_landing_path
        .description
          - if landing_option&.form_description.present?
            = tag.div(landing_option.form_description.html_safe)
          - if landing_option&.description_explanation.present?
            #description-explanation
              = tag.div(landing_option.description_explanation.html_safe)

  - unless in_iframe?
    %section.section.section-white.landing
      = render 'pages/how_it_works'

    %section.section.section-grey
      .container
        = render 'show_landing_institutions', landing: @landing
