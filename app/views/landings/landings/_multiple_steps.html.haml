- unless in_iframe?
  %h2.card-section-header= t('you_wish')

.landing-theme-cards-container{ class: "#{'in-iframe' if in_iframe?}" }
  = render partial: 'landings/landing_themes/card', collection: landing_themes, as: :landing_theme, locals: { landing: landing }

- if in_iframe? && landing.landing_themes.not_archived.pluck(:slug).include?('contactez-nous')
  %p.text-center.contact-us
    %b= t('.other_questions')
    %b= link_to t('.contact_us'), landing_theme_path({ landing_slug: landing.slug, slug: 'contactez-nous' }), class: 'click-on-landing'

