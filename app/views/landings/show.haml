:ruby
  meta title: @landing.meta_title, description: @landing.meta_description

- cache_unless(flash.present?, [@landing, in_iframe?]) do
  %style= @landing.custom_css

  - unless in_iframe?
    %section.section.section-white.landing.less-padding
      .container
        .row.landing-header
          .title
            .heading
              - if @landing.main_logo
                = display_image(name: @landing.main_logo)
              %h1= @landing.title
            %p.subtitle= @landing.subtitle
            .links
              = render 'pages/cta_button'
          .image
            = image_tag('home.png', alt: "")

  - if @landing.home_sort_order.present?
    = render 'pages/breadcrumbs', landing: @landing

  - unless in_iframe?
    %section#scroll-section

  %section.section.section-grey#section-exemples
    .container
      = render 'show_landing_topics', landing: @landing

  - unless in_iframe?
    %section.section.section-light-grey.landing
      = render 'pages/how_it_works'

    %section.section.section-white
      .container
        = render 'show_landing_institutions', landing: @landing
