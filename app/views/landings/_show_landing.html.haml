:ruby
  meta_title = landing.meta_title.presence || landing.title
  meta_description = landing.meta_description.presence || landing.subtitle
  meta title: meta_title, description: meta_description

= render 'hero'

- if solicitation.persisted?
  %section.section.section-grey#section-thankyou
    .container.container-medium
      = render 'show_thank_you', landing: landing

- if solicitation.new_record?
  %section.section.section-white#section-details
    .container.text-center
      = render 'show_landing_details', landing: landing

- if solicitation.new_record?
  %section.section.section-grey#section-exemples
    .container
      = render 'show_landing_topics', landing: landing

- if solicitation.new_record?
  %section.section.section-white#section-formulaire
    .container.container-small
      = render 'show_solicitation_form', landing: landing, solicitation: solicitation

%section.section.section-white#section-newsletter-covid
  .container
    %iframe.mj-w-res-iframe{ :frameborder => "0", :marginheight => "0", :marginwidth => "0", :scrolling => "no", :src => "https://app.mailjet.com/widget/iframe/2ogL/pTA", :width => "100%" }
    %script{ :src => "https://app.mailjet.com/statics/js/iframeResizer.min.js", :type => "text/javascript" }

%section.section.section-white#section-institutions
  .container
    = render 'show_landing_institutions', landing: landing
