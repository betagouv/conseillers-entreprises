- meta title: t('.meta.title'), description: t('.meta.description')

= render 'hero'

%section.section.section-white#description
  .container
    = image_tag('place-des-entreprises-logo.png', alt: "logo Place des Entreprises", id: 'logo-pde')
    %h2.lead-text
      = t('.question')
    %h2.lead-text
      = t('.answere')
    = link_to t('.submit_request'), '#featured-landings', class: 'button blue'
    = render 'institutions'

%section.section.section-color#featured-landings
  .container
    = render 'landings', landings: @featured_landings, links_tracking_params: @links_tracking_params

%section.section.section-grey#testimonials
  .container
    = render 'testimonials'

%section.section.section-grey#stats
  .container.container-medium
    = render 'stats/ministats'


