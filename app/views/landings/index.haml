- meta title: t('.meta.title'), description: t('.meta.description')

- unless in_iframe?
  %section.section.section-white.less-padding
    .container
      .row
        .home-title
          %h1
            = t('.question')
          %p
            = t('.answer')
          .links
            = link_to t('.submit_request'), '#scroll-thematiques', class: 'button blue'
            = link_to t('.how-it-works'), comment_ca_marche_path

        #image-home
          = image_tag('home.png', alt: "")

%section.section.section-light-grey.blank-section#scroll-thematiques

%section.section.section-grey#section-thematiques
  .container
    = render 'index_landing_cards', landings: @landings

- unless in_iframe?
  %section.section.section-lightest-grey.section-partners
    .container.text-center
      - cache('institutions', expires_in: 1.minute) do
        = render 'index_institutions'

  %section.section.section-white#container-newsletter
    .container
      = render 'newsletter'

