%h2.section__title
  = t('.received_news')
%p.section__subtitle
  = t('.newsletter_informations')

= form_with url: subscribe_newsletter_path, method: :post, local: true do |f|
  .form__group
    .input__group
      = f.email_field :email, placeholder: t('.placeholder_email'), required: 'required'
      = f.submit t('.subscribe'), class: 'button'
