- meta title: t('.title')

= render partial: 'steps', locals: { current_page_step: 4, diagnosis_step: @diagnosis.step }

#step4-app
  - if @diagnosis.needs.empty?
    %p= t('.no_needs')
  - else
    %p= t('.explanation')

    = form_for :matches, url: selection_diagnosis_path, method: :post,
               html: { id: 'step4-form' }, data: { confirm: '' } do |f|
      - @diagnosis.needs.ordered_for_interview.each do |need|
        %table.ui.compact.small.table.celled
          %thead
            %tr
              %th{ colspan: 3 }= need.subject
          %tbody
            - experts_skills = ExpertSkill.relevant_for(need)
            - if experts_skills.present?
              = f.fields_for :experts_skills do |expert_skill_form|
                - experts_skills.each do |expert_skill|
                  %tr
                    - checkbox_id = expert_skill.id.to_s.to_sym
                    %td.checkbox-width
                      .ui.fitted.checkbox
                        = expert_skill_form.check_box checkbox_id, checked: true
                        %label
                    %td.expert-width
                      = expert_skill_form.label checkbox_id, class: 'clickable' do
                        = expert_skill.expert.full_name
                        %br
                        = expert_skill.expert.antenne
                    %td
                      = expert_skill_form.label checkbox_id, class: 'clickable' do
                        .tiny.text.bold
                          = t('.expert_scope_of_work')
                        .small.text
                          = expert_skill.skill.title
            - elsif @relay_users.present?
              = f.fields_for :needs do |relay_form|
                %tr
                  %td{ colspan: 3 }
                    .ui.warning.message
                      = t('.no_expert_skill')
                      = t('.you_can_contact_relays')
                %tr
                  - checkbox_id = need.id.to_s
                  %td.checkbox-width
                    .ui.fitted.checkbox
                      = relay_form.check_box checkbox_id, checked: true
                      %label
                  %td.expert-width
                    = relay_form.label checkbox_id, class: 'clickable' do
                      - roles = @relay_users.map(&:full_name_with_role)
                      = simple_format(roles.join('<br/>'))
                  %td
                    = relay_form.label checkbox_id, class: 'clickable' do
                      .small.text
                        = t('.relays_role', count: @relay_users.size)
            - else
              %tr
                %td= t('.no_expert_skill')

      .ui.info.message
        = t('.before_sending_emails_text_html')

      .ui.two.column.stackable.grid.container
        .ui.left.aligned.column.no-left-padding.no-margin
          = link_to visite_diagnosis_path(@diagnosis), class: 'ui left labeled icon button no-margin' do
            = t('previous_step')
            %i.arrow.left.icon

        .ui.right.aligned.column.no-right-padding.no-margin
          - button_classes = []
          - if @diagnosis.visitee.blank?
            - button_classes << 'disabled'
          %button.ui.green.button.no-margin#next-step-button{ class: button_classes }
            = t('.notify_matches')

      .clear
