.button-new-city
  %a{ class: 'ui button blue' }
    = t('.new_city', locality: diagnosis.facility.readable_locality)
  .ui.hidden.divider

#form-commune
  %h3.ui.header
    = t('.title')
  = render 'communes/insee_code_field', required: false

:javascript
  $('.button-new-city').click(function() {
    $(this).hide()
    $('#form-commune').show()
  })
