.experts_subject_checkbox.fr-p-2w
  = form_with model: need do |need_form|
    = need_form.hidden_field :id
    .fr-checkbox-group{ id: dom_id(match)}
      - expert = match.expert
      = need_form.fields_for match do |match_form|
        #match-checkbox
          = match_form.hidden_field :expert_id
          = match_form.hidden_field :subject_id
          = match_form.check_box :_destroy, { checked: match_form.object.persisted? }, '0', '1'
          = match_form.label :_destroy do
            .fr-container
              .fr-grid-row
                .fr-col
                  %h3.fr-text.bold.fr-m-0
                    = expert.full_name
                  .fr-text--sm.fr-m-0= expert.job
                  .fr-text--sm.fr-m-0= expert.antenne
                .fr-col
                  - expert.experts_subjects.each do |expert_subject|
                    = [expert_subject.institution_subject, expert_subject.intervention_criteria].compact.join(' â€” ')
