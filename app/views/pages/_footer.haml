%footer.footer
  .container
    %ul.footer__links
      %li.marianne
        = image_tag 'Republique_Francaise_blanc.png', alt: 'Logo Marianne République Française'
      %li.france-relance
        = image_tag 'logo-france-relance.png', alt: 'Logo France Relance'
    %ul.footer__links
      %li.title
        = image_tag 'place-des-entreprises-logo.png', alt: 'Logo Place des Entreprises', class: 'logo-footer'
        %span= 'place-des-entreprises.beta.gouv.fr'
      %li.beta-link= link_to t('.startup_d_etat'), 'https://beta.gouv.fr/startups/place-des-entreprises'
      %li.social-network
        = link_to 'https://www.linkedin.com/company/place-des-entreprises', target: '_blank', rel: 'noopener' do
          %i.fab.fa-linkedin{ 'aria-hidden': 'true' }
          %span.visually-hidden Linkedin
        = link_to 'https://twitter.com/place_des_ets', target: '_blank', rel: 'noopener' do
          %i.fab.fa-twitter{ 'aria-hidden': 'true' }
          %span.visually-hidden Twitter
        = link_to 'https://github.com/betagouv/place-des-entreprises', target: '_blank', rel: 'noopener' do
          %i.fab.fa-github{ 'aria-hidden': 'true' }
          %span.visually-hidden Github
    %ul.footer__links
      %li= link_to t('cgu'), cgu_path
      %li= link_to t('about.mentions_d_information.title'), mentions_d_information_path
      %li= link_to t('about.mentions_legales.title'), mentions_legales_path
      %li= link_to t('usage_stats'), public_index_path
      - if policy(Stats::All).team?
        %li= link_to t('usage_team_stats'), team_index_path
      %li= link_to t('.service_presentation'), '/book.pdf', 'aria-label': t('.service_presentation_title'), target: '_blank', rel: 'noopener'
