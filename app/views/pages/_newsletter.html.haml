.text-center#newsletter
  %h2.fr-h3
    = t('.received_news')
  %p
    = t('.newsletter_informations')

  = form_with url: newsletters_path, method: :post, local: true do |f|
    .fr-input-wrap.fr-input-wrap--addon
      = f.email_field :email, placeholder: t('.placeholder_email'), required: true, value: local_assigns[:email],
      class: 'fr-input', id: 'newsletter-email', 'aria-describedby': 'format fr-newsletter-hint-text',
      'aria-label': t('.placeholder_email'), autocomplete: 'email'
      = f.submit t('.subscribe'), class: 'fr-btn', id: 'newsletter-button'
    %p.fr-hint-text#fr-newsletter-hint-text= t('.newsletter_legal_html')
    %p.fr-hint-text#format= t('.email_format')
