%header.section
  = render 'alert_region'
  .container

    .navbar__container
      %a.navbar__home{ href: '/' }
        = image_tag 'Republique_Francaise_RVB.png', alt: 'république française', class: 'navbar__logo'
        %span.navbar__domain
          = image_tag 'logo-pde-250.png', alt: 'logo Place des Entreprises'
          %span
            Place des
            %br
            Entreprises
        %button.burger-btn{ "data-action" => "toggle-nav" }
          %span.sr-only Déplier menu
          %span.burger-btn__bar
          %span.burger-btn__bar
          %span.burger-btn__bar
      %nav{ "data-target" => "toggle-nav" }
        %ul.nav__links
          %li.nav__item
            = link_to t('about.blog.title'), ENV['BLOG_URL']
          %li.nav__item
            = active_link_to t('about.comment_ca_marche.title'), comment_ca_marche_path
          %li.nav__item
            = active_link_to t('experts_login'),
             user_signed_in? ? needs_path : new_user_session_path,
             id: 'experts_login'
