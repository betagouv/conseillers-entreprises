%head
  %meta{ charset: 'UTF-8' }
  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
  = metamagic site: t('app_name'), title: %i[title site], separator: " | "
  = csrf_meta_tags
  = csp_meta_tag
  = render 'dsfr_api'
  = tarteaucitron_script
  = tarteaucitron_script_application
  = stylesheet_link_tag '@gouvfr/dsfr/dist/dsfr.min', media: 'all', data: { 'turbo-track': 'reload' }
  = stylesheet_link_tag 'remixicon/fonts/remixicon', media: 'all', data: { 'turbo-track': 'reload' }
  = stylesheet_link_tag '@gouvfr/dsfr/dist/utility/icons/icons', media: 'all', data: { 'turbo-track': 'reload' }
  = stylesheet_link_tag 'slim-select/dist/slimselect', media: 'all', data: { 'turbo-track': 'reload' }
  = stylesheet_link_tag 'application', media: 'all', data: { 'turbo-track': 'reload' }
  = javascript_include_tag 'gouvfr-module', type: 'module', data: { 'turbo-track': 'reload' }, nonce: true
  = javascript_include_tag 'gouvfr-nomodule', type: 'text/javascript', nomodule: '', as: 'script', data: { 'turbo-track': 'reload' }, nonce: true
  = javascript_include_tag 'application', data: { 'turbo-track': 'reload' }, type: "module", nonce: true

  = render 'favicon'
  = yield :head
  = matomo_script
