%footer#footer.rf-footer{:role => "contentinfo"}
  .rf-footer__top
    .rf-container
      .rf-grid-row.rf-grid-row--start.rf-grid-row--gutters
        .rf-col-12.rf-col-sm-3.rf-col-md-2.rf-col-offset-sm-6.rf-col-offset-md-8
          -# .rf-footer__top-cat Réseaux sociaux
          %ul.rf-footer__top-list
            %li
              = link_to 'https://www.linkedin.com/company/place-des-entreprises', target: '_blank', rel: 'noopener', class: 'rf-footer__top-link' do
                -# %i.ri-linkedin-fill{ 'aria-hidden': 'true' }
                %span.visually-hidden Linkedin
            %li
              = link_to 'https://twitter.com/place_des_ets', target: '_blank', rel: 'noopener', class: 'rf-footer__top-link' do
                -# %i.ri-twitter-fill{ 'aria-hidden': 'true' }
                %span.visually-hidden Twitter
            %li
              = link_to 'https://github.com/betagouv/place-des-entreprises', target: '_blank', rel: 'noopener', class: 'rf-footer__top-link' do
                -# %i.ri-github-fill{ 'aria-hidden': 'true' }
                %span.visually-hidden Github
        .rf-col-12.rf-col-sm-3.rf-col-md-2
          -# .rf-footer__top-cat Informations complémentaires
          %ul.rf-footer__top-list
            %li= link_to t('usage_stats'), public_index_path, class: 'rf-footer__top-link'
            - if policy(Stats::All).team?
              %li= link_to t('usage_team_stats'), team_index_path, class: 'rf-footer__top-link'
            %li= link_to t('pages.footer.service_presentation'), '/book.pdf', 'aria-label': t('pages.footer.service_presentation_title'), target: '_blank', rel: 'noopener', class: 'rf-footer__top-link'

  .rf-container
    .rf-footer__body
      .rf-footer__brand
        %a.rf-logo{:href => "#", :title => "république française"}
          %span.rf-logo__title
            république
            = succeed "fran\u00E7aise" do
              %br/
        = link_to 'https://www.gouvernement.fr/france-relance', class: 'rf-footer__brand-link' do
          = image_tag 'logo-france-relance.png', alt: 'Logo France Relance', class: 'rf-footer__logo', style: 'width: 120px'
      .rf-footer__content
        %p.rf-footer__content-desc
          = t('landings.index.question')
        %p.rf-footer__content-desc

          = t('landings.index.answer')
        %ul.rf-footer__content-list
          %li.rf-footer__content-item
            = mail_to ENV['APPLICATION_EMAIL'], 'Contactez-nous', target: :_blank, class: 'rf-footer__content-link'
          %li.rf-footer__content-item
            %a.rf-footer__content-link{:href => "https://www.gouvernement.fr/france-relance"} France Relance
          %li.rf-footer__content-item
            %a.rf-footer__content-link{:href => "https://service-public.fr"} service-public.fr
          %li.rf-footer__content-item
            %a.rf-footer__content-link{:href => "https://beta.gouv.fr"} beta.gouv.fr
    .rf-footer__bottom
      %ul.rf-footer__bottom-list
        %li.rf-footer__bottom-item
          = link_to t('cgu'), cgu_path, class: 'rf-footer__bottom-link'
        %li.rf-footer__bottom-item
          = link_to t('about.mentions_d_information.title'), mentions_d_information_path, class: 'rf-footer__bottom-link'
        %li.rf-footer__bottom-item
          = link_to t('about.mentions_legales.title'), mentions_legales_path, class: 'rf-footer__bottom-link'
        %li.rf-footer__bottom-item
          %a.rf-footer__bottom-link{:href => "#"} Accessibilité: non/partiellement/totalement conforme
