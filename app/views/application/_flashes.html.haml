#flashes
  - if alert
    .ui.hidden.divider
    .ui.icon.error.message
      %i.icon.exclamation.triangle
      .content
        .header
        %p= alert
    .ui.hidden.divider

  - if notice
    .ui.hidden.divider
    .ui.icon.success.message
      %i.success.icon
      .content
        .header
        %p= notice
    .ui.hidden.divider
