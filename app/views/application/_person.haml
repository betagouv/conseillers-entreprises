.block-infos
  %ul.list-unstyled.fr-pl-1v
    - if prefix.present?
      %li.blue
        %b= prefix
    %li.name
      %b= name.presence
    - if suffix.present?
      %li= suffix
    - if role.present?
      %li
        %span.picto.ri-contacts-book-line
        = role
    - if phone_number.present?
      %li
        %span.picto.ri-phone-line
        = link_to(phone_number, "tel:#{phone_number}")
    - if email.present?
      %li
        %span.picto.ri-mail-line
        = mail_to email, email, class: 'break-word'
