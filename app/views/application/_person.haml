.person
  %h4.ui.header
    - if prefix.present?
      .sub.header= prefix
    = name.presence
    - if suffix.present?
      .sub.header= suffix

  - if role.present?
    .small.text
      %i.id.badge.outline.icon
      = role
  - if email.present?
    .small.text
      %object
        %i.mail.icon
        = mail_to email
  - if phone_number.present?
    .small.text
      %i.phone.icon
      = phone_number
