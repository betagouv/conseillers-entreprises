%p= t('mailers.hello')

- if @diagnosis.from_solicitation?
  = t('mailers.company_mailer.intro_from_solicitation_html', company: @diagnosis.company.name)
- else
  = t('mailers.company_mailer.intro_from_visit_html',
   company: @diagnosis.company.name,
   advisor_antenne: @diagnosis.advisor.antenne.name,
   advisor: @diagnosis.advisor.full_name)

= t('.needs_summary', count: @diagnosis.subjects.count)

%ul
  - @diagnosis.subjects.each do |subject|
    %li
      %strong= subject.label

- antennes_names = @diagnosis.expert_antennes.map(&:name)
- antennes_names.map! { |name| content_tag('strong', name) }
= t('.transmitted_to_antennes_html', antennes: antennes_names.to_sentence.html_safe)

%p= t('mailers.nice_day')

- link_to_root = link_to t('app_name'), root_url
%p= t('mailers.place_des_entreprises_team_html', link_to_root: link_to_root)

%p= t('mailers.withdraw_request_html', mailto_link: mailto_contact_us(t('contact_us')))
