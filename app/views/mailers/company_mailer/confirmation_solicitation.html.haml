= render 'mailers/header'

%p= t('mailers.hello')

- if @solicitation.landing.iframe?
  %p= t('.content_for_iframe_html', website: @solicitation.landing.partner_url)
- else
  %p= t('.content')

%p= t('.its_about')

%p
  %strong= @solicitation.landing_subject.title

%p= t('.informations_html')

%ul
  - @solicitation.landing_subject.solicitable_institutions_names.each do |institution_name|
    %li= institution_name

%p= t('mailers.thank_you_to_used_our_service')

%p= t('mailers.cordially')

%p= t('mailers.team_html', url: root_url(mtm_campaign: 'retention', mtm_kwd: 'sequence-mail-pde'))
