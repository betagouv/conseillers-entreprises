%p= t('.for_better_taking_care_html')

- if @solicitation.landing_subject.description_explanation.present?
  = @solicitation.landing_subject.description_explanation.html_safe
- else
  %ul
    %li= t('.treasury_html')
    %li= t('.recruitment_html')
    %li= t('.investment_html')

%p= t('.upon_receipt')

.btn-wrapper
  = t('.complete_solicitation_html', redirect_link: redirect_to_solicitation_step_solicitation_url(@solicitation.uuid, relaunch: 'sollicitation-mauvaise-qualit√©'))

%p= t('mailers.thanks_for_your_trust')

