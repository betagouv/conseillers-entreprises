<template lang="pug">
  tr
    td
     .company-link(@click='selectCompany(company.siren)') {{ company.name }}
    td {{ company.location }}
</template>

<script>
export default {
  name: 'company-item',
  props: ['company'],
  data: function () {
    return {
      siren: ''
    }
  },
  methods: {
    selectCompany: function (siren) {
      this.siren = siren
      this.$emit('search-siren', this.siren)
    }
  }
}
</script>

<style lang="sass">
  .company-link
    color: #4183C4
    cursor: pointer
    &:hover
      color: #1e70bf
</style>
