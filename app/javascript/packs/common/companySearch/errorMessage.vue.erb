<template lang="pug">
  div
    template(v-if='hasError')
      .ui.error.message.with-top-margin
        template(v-if='errorType == Errors.SIRET_INPUT_ERROR')
          .header <%= I18n.t('common_vuejs.company_search.siret_format_error_title') %>
          p <%= I18n.t('common_vuejs.company_search.siret_format_error_text') %>
        template(v-if='errorType == Errors.INPUT_ERROR')
          .header <%= I18n.t('common_vuejs.company_search.input_error_title') %>
          p <%= I18n.t('common_vuejs.company_search.input_error_text') %>
        template(v-if='errorType == Errors.NOT_FOUND_ERROR')
          .header <%= I18n.t('common_vuejs.company_search.company_not_found_error_title') %>
          p <%= I18n.t('common_vuejs.company_search.company_not_found_error_text') %>
</template>

<script>
import * as Errors from './utils/searchErrorTypes'

export default {
  name: 'error-message',
  props: ['errorType'],
  data: function () {
    return {
      Errors: Errors
    }
  },
  computed: {
    hasError: function () {
      return Boolean(this.errorType)
    }
  }
}
</script>

<style lang="sass">
  .ui.error.message.with-top-margin
    margin-top: 1em
