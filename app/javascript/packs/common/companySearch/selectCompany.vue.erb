  .ui.tabular.menu.two.items
    .first.item
      margin-right: 0.5%
    .last.item
      margin-left: 0.5%
    .item
      margin-top: 0
      width: 49.5%
    .not.active.item
      background-color: #F8F8F8
      border-bottom: solid
      border-bottom-width: 1px
      border-bottom-color: #D4D4D5
